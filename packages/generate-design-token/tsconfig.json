{
	"extends": "./tsconfig.paths.json",
	"compilerOptions": {
		"target": "ESNext",
		"lib": ["ESNext"],
		"downlevelIteration": true,
		"moduleResolution": "Bundler",
		"noImplicitAny": false,
		"strict": true,
		"sourceMap": true,
		"resolveJsonModule": true
	},
	"include": ["./src/index.ts", "./src/**/*.ts", "./configs/vitest.config.ts"],
	"exclude": ["dist", "build", "node_modules"]
}
